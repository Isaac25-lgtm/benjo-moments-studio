# ============================================================
# Benjo Moments — Environment Variables
# Copy this file to .env and fill in the values.
# Never commit .env to version control.
# ============================================================

# ----------------------------------------------------------
# Core Flask
# ----------------------------------------------------------
SECRET_KEY=change-me-to-a-random-64-char-string
FLASK_ENV=development

# ----------------------------------------------------------
# Database
# ----------------------------------------------------------
# For local dev with SQLite (default):
USE_SQLITE_FALLBACK=true
# DATABASE_PATH=database.db   # optional override

# For local PostgreSQL:
# DATABASE_URL=postgresql+psycopg2://user:password@localhost:5432/benjo_moments

# For Neon (production):
# DATABASE_URL=postgresql+psycopg2://neondb_owner:<password>@<host>.neon.tech/neondb?sslmode=require

# ----------------------------------------------------------
# Authentication
# ----------------------------------------------------------
# TEST_AUTH_MODE=true  → any non-empty email/password logs in
# TEST_AUTH_MODE=false → validate against the users table
TEST_AUTH_MODE=true

# Optional: restrict test-mode login to a specific password
# (Leave unset to accept any non-empty password in test mode)
# TEST_PIN=mydevpin

# ----------------------------------------------------------
# Session
# ----------------------------------------------------------
# Session lifetime in hours (default 8)
# SESSION_LIFETIME_HOURS=8

# ----------------------------------------------------------
# Rate Limiting (Phase 7)
# ----------------------------------------------------------
# Option 1: memory:// (default, no Redis needed)
# RATELIMIT_STORAGE_URI=memory://

# Option 2: Redis (for multi-worker / persistent rate limiting)
# REDIS_URL=redis://localhost:6379
# RATELIMIT_STORAGE_URI=redis://localhost:6379

# ----------------------------------------------------------
# File Uploads
# ----------------------------------------------------------
# UPLOAD_FOLDER=static/uploads

# ----------------------------------------------------------
# Default admin credentials
# (Only used when TEST_AUTH_MODE=false and no users exist)
# ----------------------------------------------------------
DEFAULT_ADMIN_EMAIL=admin@benjomoments.com
DEFAULT_ADMIN_PASSWORD=changeme123
DEFAULT_ADMIN_NAME=Admin User
