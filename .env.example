# .env â€” Local development environment variables
# Copy this file and rename to .env, fill in your actual values.
# DO NOT commit .env to git.

# -------------------------------------------------------
# Database
# -------------------------------------------------------
# Option A: SQLite fallback (default for local dev)
USE_SQLITE_FALLBACK=true
# DATABASE_URL is derived automatically when USE_SQLITE_FALLBACK=true

# Option B: Local PostgreSQL (Docker)
# DATABASE_URL=postgresql+psycopg2://benjo:benjo@localhost:5432/benjo_moments

# Option C: Neon (production)
# DATABASE_URL=postgresql+psycopg2://neondb_owner:<password>@<host>.neon.tech/neondb?sslmode=require

# -------------------------------------------------------
# App
# -------------------------------------------------------
SECRET_KEY=change-me-to-a-long-random-string
FLASK_ENV=development

# -------------------------------------------------------
# Auth (set false in production for real password checks)
# -------------------------------------------------------
TEST_AUTH_MODE=true

# -------------------------------------------------------
# Admin seed credentials (only used when TEST_AUTH_MODE=false)
# -------------------------------------------------------
DEFAULT_ADMIN_EMAIL=admin@benjomoments.com
DEFAULT_ADMIN_PASSWORD=admin123

# -------------------------------------------------------
# Uploads (optional, defaults to static/uploads)
# -------------------------------------------------------
# UPLOAD_FOLDER=/opt/render/project/data/uploads
